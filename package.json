{
    "name": "shadcn-code",
    "displayName": "shadcn-code",
    "description": "ShadCN Helper é uma extensão para VSCode que facilita o uso da biblioteca ShadCN/UI",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.103.0"
    },
    "categories": [
        "Snippets",
        "Other"
    ],
    "activationEvents": [
        "onView:shadcn-ui-helper"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "shadcn-ui-container",
                    "title": "Shadcn Helper",
                    "icon": "$(layers)"
                }
            ]
        },
        "views": {
            "shadcn-ui-container": [
                {
                    "id": "shadcn-ui-helper",
                    "name": "Componentes",
                    "type": "tree"
                }
            ]
        },
        "commands": [
            {
                "command": "shadcn-helper.insertSnippetWithImport",
                "title": "Inserir Snippet com Import"
            },
            {
                "command": "shadcn-helper.refreshTreeView",
                "title": "Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "shadcn-helper.installShadcnComponent",
                "title": "Instalar Componente Shadcn"
            },
            {
                "command": "shadcn-helper.installRegistryComponent",
                "title": "Instalar Componente do Registry"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "shadcn-helper.refreshTreeView",
                    "when": "view == shadcn-ui-helper",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Shadcn Helper",
            "properties": {
                "shadcn-helper.registryUrl": {
                    "type": "string",
                    "default": "",
                    "description": "URL para o seu arquivo registry.json personalizado (ex: um Gist do GitHub)."
                },
                "shadcn-helper.componentsPath": {
                    "type": "string",
                    "default": "@/components/ui",
                    "description": "Alias ou caminho para a pasta de componentes no seu projeto."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.103.0",
        "@typescript-eslint/eslint-plugin": "^8.42.0",
        "@typescript-eslint/parser": "^8.42.0",
        "@vscode/test-cli": "^0.0.11",
        "@vscode/test-electron": "^2.5.2",
        "esbuild": "^0.25.9",
        "eslint": "^9.34.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "axios": "^1.11.0"
    }
}